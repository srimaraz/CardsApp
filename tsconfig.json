{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-native",
    "esModuleInterop": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@utils/*": ["src/utils/*"],
      "@navigation/*": ["src/navigation/*"],
      "@assets/*": ["assets/*"],
      "@constants/*": ["src/constants/*"],
      "@api/*": ["src/api/*"],
      "@store/*": ["src/store/*"],
      "@config/*": ["src/config/*"]
    }
  }
}

